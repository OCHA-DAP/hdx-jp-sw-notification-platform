{
    "workbench.tree.indent": 24,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.scrollback": 5000,
    "python.linting.pylintEnabled": true,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pycodestyleCategorySeverity.E": "Information",
    "python.linting.pycodestyleCategorySeverity.W": "Information",
    "python.linting.pydocstyleArgs": [
        "--max-line-length=120"
    ],
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "editor.formatOnType": true,
    "python.linting.enabled": true,
    // "python.formatting.provider": "autopep8",
    "python.linting.pylintArgs": [
        "--disable=missing-function-docstring",
        "--disable=missing-class-docstring",
        "--disable=missing-module-docstring",
        "--dsiable=logging-fstring-interpolation",
        "--max-line-length=120",
    ],
    "editor.rulers": [
        120
    ],
    "autoDocstring.docstringFormat": "sphinx-notypes",
    "gitlens.blame.format": "${message|20?} ${agoOrDate|14-}",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "/srv/listener"
}